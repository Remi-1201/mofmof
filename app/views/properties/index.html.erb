<div class = "index">
  <p id="notice"><%= notice %></p>
  <h1>賃貸情報</h1>

  <table>
    <thead>
      <tr>
        <th class="th">物件名</th>
        <th class="th">賃料</th>
        <th class="th">住所</th>
        <th class="th">築年数</th>
        <th class="th">備考</th>
        <th class="th" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td class="td"><%= property.name %></td>
          <td class="td"><%= property.rent %></td>
          <td class="td"><%= property.address %></td>
          <td class="td"><%= property.age %></td>
          <td class="td"><%= property.note %></td>
          
          <td><%= button_to 'show', property,method: :get, class: "button1"  %></td>
          <td><%= button_to 'edit', edit_property_path(property),method: :get, class: "button1"  %></td>
          <td><%= button_to 'destroy', property, method: :delete, data: { confirm: 'Are you sure?' },class: "button1"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= button_to '新規登録', new_property_path, method: :get, class: "button_link" %>
</div>